{
  "name": "portfolio",
  "version": "2.0.0",
  "description": "Personal portfolio.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd ./api && npm run build",
    "build:web": "cd ./web && npm run build",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd ./api && npm run dev",
    "dev:web": "cd ./web && npm run dev",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "cd ./api && npm run lint",
    "lint:web": "cd ./web && npm run lint",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\"",
    "start:api": "cd ./api && npm run start",
    "start:web": "cd ./web && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielsolartech/portfolio.git"
  },
  "keywords": [
    "portfolio"
  ],
  "author": "Daniel Solarte Chaverra",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/danielsolartech/portfolio/issues"
  },
  "homepage": "https://github.com/danielsolartech/portfolio#readme",
  "dependencies": {
    "concurrently": "^5.3.0"
  },
  "devDependencies": {
    "husky": "^4.3.0"
  }
}
